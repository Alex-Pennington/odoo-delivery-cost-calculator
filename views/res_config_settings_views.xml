<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Delivery Cost Calculator settings to Sales settings page -->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.delivery.cost</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Add settings block at the end of the form -->
            <xpath expr="//app[@name='sale']" position="inside">
                <block title="GPS Delivery Cost Calculator">
                    <setting help="Configure GPS-based delivery cost calculation parameters">
                        <div class="row mt16">
                            <label for="delivery_origin_latitude" string="Origin Latitude" class="col-lg-3 o_light_label"/>
                            <field name="delivery_origin_latitude"/>
                        </div>
                        <div class="row mt16">
                            <label for="delivery_origin_longitude" string="Origin Longitude" class="col-lg-3 o_light_label"/>
                            <field name="delivery_origin_longitude"/>
                        </div>
                        <div class="row mt16">
                            <label for="delivery_rate_per_mile" string="Rate per Mile ($)" class="col-lg-3 o_light_label"/>
                            <field name="delivery_rate_per_mile"/>
                        </div>
                        <div class="row mt16">
                            <label for="delivery_max_distance" string="Maximum Delivery Distance (miles)" class="col-lg-3 o_light_label"/>
                            <field name="delivery_max_distance"/>
                        </div>
                        <div class="row mt16">
                            <label for="delivery_gps_carrier_max_distance" string="GPS Carrier Max Distance (miles)" class="col-lg-3 o_light_label"/>
                            <field name="delivery_gps_carrier_max_distance"/>
                        </div>
                        <div class="row mt16">
                            <label for="delivery_max_order_quantity" string="Maximum Order Quantity (units)" class="col-lg-3 o_light_label"/>
                            <field name="delivery_max_order_quantity"/>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
