<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Delivery Cost Calculator settings to Sales settings page -->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.delivery.cost</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Add settings at the end of sale settings using a simple xpath -->
            <xpath expr="//div[@id='sale_settings']" position="after">
                <h2>GPS Delivery Cost Calculator</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="delivery_origin_latitude"/>
                            <div class="text-muted">
                                Latitude coordinate of delivery starting point (decimal degrees)
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="delivery_origin_latitude"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="delivery_origin_longitude"/>
                            <div class="text-muted">
                                Longitude coordinate of delivery starting point (decimal degrees)
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="delivery_origin_longitude"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="delivery_rate_per_mile" string="Rate per Mile ($)"/>
                            <div class="text-muted">
                                Cost per mile for delivery calculation
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="delivery_rate_per_mile"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="delivery_max_distance" string="Maximum Delivery Distance (miles)"/>
                            <div class="text-muted">
                                Maximum distance for manual delivery orders
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="delivery_max_distance"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="delivery_gps_carrier_max_distance" string="GPS Carrier Max Distance (miles)"/>
                            <div class="text-muted">
                                Maximum distance for GPS carrier on website
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="delivery_gps_carrier_max_distance"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="delivery_max_order_quantity" string="Maximum Order Quantity"/>
                            <div class="text-muted">
                                Maximum items for GPS carrier on website
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="delivery_max_order_quantity"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
